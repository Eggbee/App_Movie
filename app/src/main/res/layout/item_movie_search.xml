<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

    <ImageView
            android:id="@+id/ic_movie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            android:transitionName="ic_movie"
            app:layout_constraintDimensionRatio="1:0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

    <TextView
            android:id="@+id/text_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="25dp"
            android:transitionName="text_movie_title"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ic_movie"
            app:layout_constraintStart_toStartOf="@id/ic_movie"
            app:layout_constraintTop_toBottomOf="@+id/ic_movie"
            tools:text="Title" />

</androidx.constraintlayout.widget.ConstraintLayout>
